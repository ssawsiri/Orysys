@model LoanApplicationModel


<form method="post">
    <div class="pt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Add Loan Application
            </h2>
            <hr />

        </div>
        <div asp-validation-summary="All" class="text-warning">
        </div>
        <div class="mb-3">
            <table class="table-borderless border-2" width="100%">
                <thead>
                </thead>
                <tbody>

                    <tr class="border-spacing">
                        <td width="20%">
                            <label asp-for="CustomerName">Customer Name</label>
                        </td>

                        <td width="20%">
                            <input asp-for="CustomerName" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </td>
                    </tr>


                    <tr class="border-spacing">
                        <td width="20%">
                            <label asp-for="LoanTypeName">Loan Type</label>
                        </td>

                        <td width="20%">
                            <select class="form-select" asp-for="LoanTypeName" asp-items="ViewBag.LoanTypesList">
                                <option value="">--Select Loan Type--</option>
                            </select>
                        </td>
                        <td width="5%">
                        </td>
                       @*  <td width="20%">
                            <label asp-for="Address"></label>
                        </td>
                        <td width="30%">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="border-spacing">
                        <td width="20%">
                            <label asp-for="BirthOfDate"></label>
                        </td>
                        <td width="20%">
                            <input type="date" asp-for="BirthOfDate" class="" />
                            <span asp-validation-for="BirthOfDate" class="text-danger"></span>
                        </td>
                        <td width="5%">
                        </td>
                        <td width="20%">
                        </td>
                        <td width="30%">
                        </td>
                    </tr>
                    <tr class="border-spacing">
                        <td width="20%">
                            <label asp-for="Gender"></label>
                        </td>
                        <td width="20%">
                            <select class="form-select" id="genderSelect" asp-for="Gender">
                                <option>Male</option>
                                <option>Female</option>
                                <option>Not Specify</option>
                            </select>
                        </td>
                        <td width="5%">
                        </td>
                        <td width="20%">
                            <label asp-for="NICNo"></label>
                        </td>
                        <td width="30%">
                            <input asp-for="NICNo" class="form-control" />
                            <span asp-validation-for="NICNo" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr class="border-spacing">
                        <td width="20%">
                        </td>
                        <td width="20%">
                        </td>
                        <td width="5%">
                        </td>
                        <td width="20%">
                            <label asp-for="MobileNo"></label>
                        </td>
                        <td width="30%">
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </td> *@
                    </tr>
                </tbody>
            </table>

        </div>
        <br />

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="width:250px">Back to Loan Application List</a>
    </div>
</form>

@*client side validation*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}