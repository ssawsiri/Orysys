@model IEnumerable<OrysysLoanApplication.Models.LoanApplicationModel>
@{
    ViewData["Title"] = "Loan Application Details";
}

<div class="text-center">
    <h1 class="display-4">Loan Applications - Orysys</h1>
</div>
<div>
    <a asp-controller="Home" asp-action="Create" class="btn btn-success my-3">
        <i class="bi bi-plus-circle"></i> &nbsp;
        Create New Loan Application
    </a>
</div>
<div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    NIC / Passport
                </th>
                <th>
                    Loan Name
                </th>
                <th>
                    Loan Interest
                </th>
                <th>
                    Loan Amount
                </th>
                <th>
                    Duration (Month)
                </th>
                <th>
                    Registered Date
                </th>
                <th>
                    Status
                </th>
              </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any() )
            {
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="27%">
                            @obj.CustomerName
                        </td>
                        <td width="10%">
                            @obj.NIC
                        </td>
                        <td width="10%">
                            @obj.LoanTypeName
                        </td>
                        <td width="3%">
                            @obj.InterestRate
                        </td>
                        <td width="10%">
                            @obj.LoanAmount
                        </td>
                        <td width="5%">
                            @obj.Duration
                        </td>
                        <td width="20%">
                            @obj.RegisteredDate
                        </td>
                        <td width="10%">
                            @obj.Status
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@obj.LoanID" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> &nbsp;
                                    Edit
                                </a>

                            </div>
                        </td>
                    </tr>
                }
               
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">
                        No Loan Applications Available
                    </td>
                </tr>
            }
            
        </tbody>
    </table>

</div>
