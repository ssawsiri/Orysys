@model LoginViewModel
@{
    ViewData["Title"] = "Login to Orysys Loan Application";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-card {
        background: #fff;
        padding: 30px;
        width: 360px;
        border-radius: 12px;
        align-items: center;
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: 600;
            font-size: 14px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .btn-login {
        width: 100%;
        background: #667eea;
        border: none;
        padding: 10px;
        color: #fff;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
    }

        .btn-login:hover {
            background: #5a67d8;
        }

    .error {
        margin-top: 10px;
        color: red;
        text-align: center;
        font-size: 14px;
    }
</style>

<div class="login-card">
    <h2>Secure Login</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label>Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter username" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
        </div>

        <button type="submit" class="btn-login">Login</button>
       
        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="error">@Model.ErrorMessage</div>
        }
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}